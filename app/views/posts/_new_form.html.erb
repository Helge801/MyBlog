<%= form_with(model: post, local: true) do |form| %>
  <div class="form-group">
      <%= form.text_area :body, class: "form-control", placeholder: 'Put the content of your new blog post here', rows:10 %>
  </div>
  <%= form.button :create, type: 'submit', name: :blog_id, value: post.blog_id, class: "btn btn-primary"%>

<% end %>
