<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
            <title>MyBlog</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= (link_to 'Log-in', new_user_session_path) if !logged_in?(:user, :admin) %>
    <%= (link_to 'Log-out', destroy_user_session_path, method: :delete) if logged_in?(:user, :admin) %>
    <%= (link_to 'Sign-up', new_user_registration_path) if !logged_in?(:user, :admin) %>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
