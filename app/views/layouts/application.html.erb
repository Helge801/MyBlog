<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= (link_to 'Log-in', new_user_session_path) if current_user.is_a?(GuestUser) %>
    <%= (link_to 'Log-out', destroy_user_session_path, method: :delete) if !current_user.is_a?(GuestUser) %>
    <%= (link_to 'Sign-up', new_user_registration_path) if current_user.is_a?(GuestUser) %>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
