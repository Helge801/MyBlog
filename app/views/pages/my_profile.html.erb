<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= js add_gritter(flash[:notice]) %>
    <h2><%= current_user.name %> | <%= current_user.username %></h2>
    </div>
    <div class="col-md-3 profile-pic">
      <%= image_tag current_user.image %>
    </div>
    <div class="col-md-9">
      <h3>Bio</h3>
      <% if current_user.bio.nil? %>
        <%= link_to 'Create bio', '#' %> 
      <% else %>
        <p><%= current_user.bio %></p>
        <%= link_to 'Edit', '#' %> 
      <% end %>
    </div>
  </div>
  <hr>
  <h1>My Blogs</h1>
  <% @blogs.each do |b| %>
    <h1><%= link_to b.title, b %></h1>
    <%= b.body %>
  <% end %>

</div>